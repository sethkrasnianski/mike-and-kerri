{
  "dest": "public",
  "html": {
    "src": "assets/index.html",
    "dest": "public"
  },
  "scripts": {
      "project": [
        "assets/javascripts/modules/*.js",
        "assets/javascripts/main.js"
      ],
      "vendor": [
        "bower_components/modernizr/modernizr.js",
        "bower_components/requirejs/require.js",
        "bower_components/jquery/dist/jquery.min.js",
        "bower_components/isotope/dist/isotope.pkgd.js",
        "bower_components/wowjs/dist/wow.min.js",
        "bower_components/slidetastic/src/Slidetastic.js",
        "bower_components/debounce/jQuery-Debounce",
        "bower_components/lodash/dist/lodash.min.js"
      ],
      "dest": {
        "project": "public/javascripts",
        "vendor": "assets/javascripts/vendor"
      }
    },
  "styles": {
      "vendor": {
        "src": [
          "bower_components/wowjs/css/libs/animate.css"
        ],
        "dest": "public/stylesheets"
      },
      "src": "assets/stylesheets/*.styl",
      "dest": "public/stylesheets"
  }
}
