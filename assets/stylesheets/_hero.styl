#marriage
  background: url('../images/hero.jpg') no-repeat center center
  background-size: cover
  color: white

  h2
    font-size: 65px
    margin-top: 17px
    +below(3)
      font-size: 30px
      margin-top: 38px

  button
    display: block
    margin: 30px auto 160px auto
    padding-left: 40px
    padding-right: 40px

  i
    bottom: 20px
    left: 0
    margin: auto
    position: absolute
    right: 0
    width: 42px
    +below(600px)
      display: none

#names
  fill: white
  position: relative
  top: 50px
  width: 47%
