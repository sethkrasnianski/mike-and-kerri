fancy-font = "coquette", fantasy
primary-font = "Source Sans Pro", sans-serif
secondary-font = "minion-pro", serif

h1
  font-size: 45px
  font-family: fancy-font
  margin-bottom: 25px
  padding: 0 78px
  position: relative
  text-align: center

h2, h3, h4, h5, h6
  font-family: primary-font
  font-weight: 600

p, em
  font-family: secondary-font

p
  color: type-blue
  line-height: 27px
  span, a
    font-weight: 600

i.filigree
  background-repeat: no-repeat
  background-position: center center
  background-size: 100% 100%
  display: inline-block
  height: 27px
  width: 70px
  +below(738px)
    display: none
  &.left
    background-image: url('../images/icons-retina/h1-filigree-left.png')
    margin-right: 20px
  &.right
    background-image: url('../images/icons-retina/h1-filigree-right.png')
    margin-left: 20px
