@import '_reset'
@import '_variables'
@import '_mixins'
@import '_type'
@import '_forms'
@import '_hero'
@import '_story'
@import '_gallery'

*
  box-sizing: border-box

img
  width: 100%
  height: auto

.clearfix
  clear: both
  display: block
  height: 0
  overflow: hidden
  visibility: hidden
  width: 0

.center-text
  text-align: center

[class^="col-"], [class*="col-"]
  float: left
  padding-left: gutter
  padding-right: gutter
  position: relative
  +below(3)
    width: 100%!important

.col-1-4
  width: col-1-4
.col-1-3
  width: col-1-3
.col-2-3
  width: col-2-3
.col-1-2
  width: col-1-2
.col-3-4
  width: col-3-4

.container
  max-width: 1200px
  margin: auto

section
  padding: 5% 0
  &#story, &#party, &#venue
    background: url(../images/bg-tile.jpg)
