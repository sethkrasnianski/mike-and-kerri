@import '_reset'
@import '_variables'
@import '_mixins'
@import '_type'
@import '_forms'
@import '_hero'
@import '_story'
@import '_gallery'
@import '_party'
@import '_registry'
@import '_venue'
@import '_rsvp'

*
  box-sizing: border-box

img
  width: 100%
  height: auto

.clearfix
  clear: both
  display: block
  height: 0
  overflow: hidden
  visibility: hidden
  width: 0

.center-text
  text-align: center

[class^="col-"], [class*="col-"]
  float: left
  padding-left: gutter
  padding-right: gutter
  position: relative
  +below(3)
    width: 100%!important

.col-1-1
  width: 100%
.col-1-4
  width: col-1-4
.col-1-3
  width: col-1-3
.col-2-3
  width: col-2-3
.col-1-2
  width: col-1-2
.col-3-4
  width: col-3-4

.container
  margin: auto
  max-width: 1200px
  position: relative

header
  background: rgba(255,255,255, 0.75)
  box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.137)
  height: 50px
  padding: 18px 0
  position: fixed
  text-align: center
  top: -400px
  transition(top, 0.35s, ease)
  width: 100%
  z-index: 3837
  +below(613px)
    height: auto
  &.visible
    top: 0px
  a.home
    position: relative
    top: -18px
  a.link
    color: type-blue
    display: inline-block
    font-family: primary-font
    font-size: 14px
    font-weight: 700
    letter-spacing: 1px
    margin-left: 10px
    margin-right: 10px
    text-decoration: none
    text-transform: uppercase
    vertical-align: top
    &:hover
      color: #f68e69
    +above(613px)
      &:hover
        border-bottom: 2px solid #f68e69
        padding-bottom: 5px
    +below(613px)
      margin-bottom: 12px
  +below(890px)
    .home
      display: none
  img
    max-width: 256px

section
  padding: 5% 0
  &#story, &#party, &#venue
    background: url(../images/bg-tile.jpg)

#modal
  background: rgba(0,0,0, 0.75)
  display: none
  height: 100%
  left: 0
  position: fixed
  top: 0
  width: 100%
  z-index: 3838

  &.vertical img
    height: 90%
    width: auto

  img
    bottom: 0
    left: 0
    margin: auto
    position: absolute
    right: 0
    top: 0

.no-scroll
  overflow: hidden
